# =============================================================================
# NURA APP ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Frontend: Copy to frontend/.env.local
# Backend: Copy to backend/.env

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Google AI (Gemini) Configuration - REQUIRED
# Get your free API key from: https://ai.google.dev/
GOOGLE_API_KEY=your_google_api_key_here

# Vapi.ai Configuration - REQUIRED for voice features
# Get these values from: https://dashboard.vapi.ai/
VAPI_API_KEY=your_vapi_api_key_here
NEXT_PUBLIC_VAPI_PUBLIC_KEY=your_vapi_public_key_here
NEXT_PUBLIC_VAPI_DEFAULT_ASSISTANT_ID=your_default_assistant_id_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Vapi Webhook Configuration (optional)
VAPI_WEBHOOK_SECRET=your_webhook_secret_here
VAPI_SERVER_SECRET=your_server_secret_here

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
BACKEND_URL=http://localhost:8000
MEMORY_SERVICE_URL=http://localhost:8000

# Server Configuration
HOST=0.0.0.0
PORT=8000
MEMORY_SERVICE_HOST=0.0.0.0
MEMORY_SERVICE_PORT=8000
ENV=development

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# Redis Configuration (recommended for production)
REDIS_URL=redis://localhost:6379

# Vector Database Selection (chroma or pinecone)
VECTOR_DB_TYPE=chroma

# Chroma Configuration (default - local storage)
CHROMA_PERSIST_DIR=./data/chroma

# Pinecone Configuration (production recommended)
# Uncomment and configure if using Pinecone
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_INDEX_NAME=nura-memories
# USE_PINECONE=true

# =============================================================================
# MEMORY SERVICE TUNING
# =============================================================================

# Memory System Configuration
SHORT_TERM_MEMORY_SIZE=100
LONG_TERM_MEMORY_SIZE=1000
RELEVANCE_THRESHOLD=0.6
STABILITY_THRESHOLD=0.7
EXPLICITNESS_THRESHOLD=0.5
MIN_SCORE_THRESHOLD=0.6

# AI Models Configuration
GEMINI_MODEL=models/gemini-2.0-flash
GEMINI_EMBEDDING_MODEL=models/gemini-2.0-flash

# =============================================================================
# PROMPT CONFIGURATION (Optional - uses files by default)
# =============================================================================

# Prompt file paths (optional - defaults to files in services/memory/prompts/)
# MENTAL_HEALTH_SYSTEM_PROMPT_FILE=services/memory/prompts/system_prompt.txt
# CONVERSATION_GUIDELINES_FILE=services/memory/prompts/conversation_guidelines.txt
# CRISIS_DETECTION_PROMPT_FILE=services/memory/prompts/crisis_detection.txt
# MEMORY_COMPREHENSIVE_SCORING_PROMPT_FILE=services/memory/prompts/memory_scoring.txt

# Environment variable overrides (optional - not recommended)
# MENTAL_HEALTH_SYSTEM_PROMPT="Your custom system prompt here..."
# CONVERSATION_GUIDELINES="Your custom guidelines here..."
# CRISIS_DETECTION_PROMPT="Your custom crisis detection prompt here..."
# MEMORY_COMPREHENSIVE_SCORING_PROMPT="Your custom scoring prompt here..."

# =============================================================================
# AUTHENTICATION (Currently not used)
# =============================================================================

# JWT Configuration (optional - not currently implemented)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AUDIT & LOGGING (Optional)
# =============================================================================

# Audit logging configuration
# AUDIT_LOG_DIR=./logs/audit
# AUDIT_LOG_FILE=audit.log
# AUDIT_LOG_LEVEL=INFO
# USE_GOOGLE_CLOUD_LOGGING=false

# Privacy settings
# SENSITIVE_ENTITIES=PERSON,EMAIL,PHONE,SSN
# REQUIRE_CONSENT_ENTITIES=PERSON,EMAIL 